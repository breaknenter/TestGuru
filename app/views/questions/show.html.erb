<strong>
  Тест: <%= @question.test.title %>
</strong>

<p>
  <%= @question.text %>
</p>

<strong>
  Вопросы:
</strong>

<ol>
  <%= render @question.answers %>
</ol>

<p>
  <%= link_to "Назад", test_path(@question.test) %> |
  <%= link_to "Создать", new_question_answer_path(@question) %> |
  <%= link_to "Изменить", edit_question_path(@question) %> |
  <%= link_to "Удалить", question_path(@question),
                         method: :delete,
                         data:   { confirm: "Удалить вопрос?" } %>
</p>
