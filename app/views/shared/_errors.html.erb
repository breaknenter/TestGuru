<% if resource.present? && resource.errors.any? %>
  <%= content_tag(:div, class: "recource-errors", data: { resource_id: resource.id }) do %>
    <strong><%= t(".message", count: resource.errors.count) %></strong>

    <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
