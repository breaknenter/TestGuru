<div class="row justify-content-center mt-4">
  <div class="col col-md-4">
    <h1><%= t(".header") %></h1>

    <% if @errors.present? %>
      <div class="alert alert-danger">
        <% @errors.each do |error| %>
          <%= octicon "dot-fill", class: "text-danger" %>
          <%= error %><br>
        <% end %>
      </div>
    <% end %>

    <div class="card border-primary">
      <div class="card-body">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>
