<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render "shared/errors", resource: @badge %>

  <table>
    <tr>
      <td><%= form.label :rule %></td>
    </tr>
    <tr>
      <td><%= form.text_field :rule %></td>
    </tr>

    <tr>
      <td><%= form.label :value %></td>
    </tr>
    <tr>
      <td><%= form.text_field :value %></td>
    </tr>

    <tr>
      <td><%= form.label :reward %></td>
    </tr>
    <tr>
      <td><%= form.select :reward, Badge::REWARDS %></td>
    </tr>

    <tr>
      <td><%= form.submit %></td>
    </tr>
  </table>
<% end %>
