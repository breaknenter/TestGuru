<h1><%= t(".header") %></h1>

<%= link_to t(".new_test"), new_admin_test_path %>

<%= render "shared/errors", resource: @test %>

<% if @tests.present? %>
  <table class="table">
    <tr>
      <th><%= t(".name") %></th>
      <th><%= t(".level") %></th>
      <th><%= t(".questions") %></th>
      <th colspan="3"><%= t(".actions") %></th>
    </tr>

    <%= render @tests %>
  </table>
<% else %>
  <p><%= t(".tests_not_found") %></p>
<% end %>
