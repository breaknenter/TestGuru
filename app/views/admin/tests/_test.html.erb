<tr>
  <td class="align-middle">
    <%= link_to test.title, admin_test_path(test), class: "test-title", data: { test_id: test.id } %>
    <%= render "form_inline", test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test_level(test) %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle">
    <%= link_to t("links.change"),
                edit_admin_test_path(test),
                data: { test_id: test.id },
                class: "form-inline-link" %>
  </td>
  <td class="align-middle"><%= link_to t("links.delete"), admin_test_path(test),
                             method: :delete,
                             data:   { confirm: t("misc.delete_confirm") } %>
  </td>
</tr>
