<% unless logged_in? %>
  <h2>Добро пожаловать в TestGuru</h2>
<% else %>
  <h1>Тесты</h1>

  <%= link_to "Новый тест", new_test_path %>

  <% if @tests.present? %>
    <table>
      <tr>
        <th>Название</th>
        <th>Уровень</th>
        <th>Вопросов</th>
        <th colspan="3">Действия</th>
      </tr>

      <%= render @tests %>
    </table>
  <% else %>
    <p>Тестов нет</p>
  <% end %>
<% end %>
